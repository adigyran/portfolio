<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.App.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Widget.App.Button.FilledButton" parent="Widget.Material3.Button">
        <item name="rippleColor">@color/button_ripple_color_selector</item>
        <item name="backgroundTint">@color/button_background_color_selector</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.App.ButtonText.Default</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.App.ButtonText.Default</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="Widget.App.Button.FilledButton.White">
        <item name="android:textColor">@color/button_text_blue</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.RoundedButton</item>
        <item name="rippleColor">@color/button_ripple_color_selector_white</item>
        <item name="backgroundTint">@color/button_background_color_selector_white</item>
    </style>

    <style name="Widget.App.Button.FilledButton.DarkBlue">
        <item name="rippleColor">@color/button_ripple_color_selector_dark_blue</item>
        <item name="backgroundTint">@color/button_background_color_selector_dark_blue</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@color/button_text_blue</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">

    </style>
</resources>