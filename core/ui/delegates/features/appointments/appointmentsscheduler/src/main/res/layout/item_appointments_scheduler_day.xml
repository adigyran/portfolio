<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="40dp"
    android:background="@drawable/bg_appointments_scheduler_day"
    android:paddingStart="4dp"
    android:paddingTop="8dp"
    android:paddingEnd="4dp"
    android:paddingBottom="8dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dayOfWeekNameTv"
        tools:text="Wed"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.App.Body.LabelMiniText"
        android:textColor="@color/scheduler_day_text_color_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dayOfMonthTv"
        tools:text="12"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.App.H4"
        android:textColor="@color/scheduler_day_text_color_selector"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/dayOfWeekNameTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:id="@+id/ivIndicator"
        android:src="@drawable/ic_indicator"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/dayOfMonthTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>