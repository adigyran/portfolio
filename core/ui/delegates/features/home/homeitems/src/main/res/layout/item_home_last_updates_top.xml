<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_last_updates_top"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/latestUpdatesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Latest update"
        android:textAppearance="@style/TextAppearance.App.H3"
        app:layout_constraintStart_toStartOf="@id/updatesBg"
        app:layout_constraintTop_toTopOf="@id/updatesBg" />

</androidx.constraintlayout.widget.ConstraintLayout>